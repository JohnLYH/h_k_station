<?xml version="1.0" encoding="utf-8" ?>
<template>
    <!-- 工器具搜索 -->
    <t t-name="tool_maintenance_search_template">
        <div class="form-inline custom_search_box" search_pannel_js_class="tool_search">
            <div class="container-fluid">
                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <span class="search_label" style="float:left;">設備名稱:</span>
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div for="equipment_name" class="form-widget-item"/>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <span class="search_label" style="float:left;">設備編號:</span>
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div for="equipment_num" class="form-widget-item"/>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <span class="search_label" style="float:left;">所屬班組:</span>
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div for="departments" class="form-widget-item"/>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <span class="search_label" style="float:left;">型號:</span>
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div for="model" class="form-widget-item"/>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <span class="search_label" style="float:left;">狀態:</span>
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <div for="status" class="form-widget-item"/>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <div class="form-widget-item col-md-12 col-sm-12 col-xs-12">
                        <button type="button" class="btn btn-primary search_extend_apply">
                            搜索
                        </button>
                        <button type="button" class="btn btn-default search_extend_reset">
                            重置
                        </button>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12" style="margin-bottom:5px; height:40px; line-height:40px;">
                    <div class="form-widget-item col-md-12 col-sm-12 col-xs-12">
                        <button type="button" class="btn search_import btn-primary">
                            導入
                        </button>
                        <button type="button" class="btn search_export btn-primary">
                            導出
                        </button>
                        <button type="button" class="btn search_new btn-primary">
                            新增
                        </button>
                        <form style="display:none" action="/other_equipment/put_in_excel" method="post" enctype="multipart/form-data">
                            <input type="file" name="file" value=""/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <!--工器具檢驗-->
    <t t-name="tool_inspection">

    </t>
</template>