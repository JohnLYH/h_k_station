<odoo>
    <data>

        <!--  工單審批tree -->
        <record model="ir.ui.view" id="maintenance_plan_approval_tree">
            <field name="name">工單審批</field>
            <field name="model">maintenance_plan.approval</field>
            <field name="arch" type="xml">
                <!--<tree import="false" edit="0" create="0" delete="0" search_ex_template="maintenance_plan_approval_search_template"-->
                      <!--search_pannel_js_class="plan_search_pannel">-->
                <tree import="false"  search_ex_template="maintenance_plan_approval_search_template"
                  search_pannel_js_class="plan_search_pannel">
                    <field name="work_order"/>
                    <field name="submitter"/>
                    <field name="submit_time"/>
                    <field name="status"/>
                    <field name="approver"/>
                    <field name="approval_time"/>
                    <widget name="approval_management_tree_button" string="操作"/>
                </tree>
            </field>
        </record>

        <!--  工單審批form -->
        <record model="ir.ui.view" id="maintenance_plan_approval_form">
            <field name="name">工單審批</field>
            <field name="model">maintenance_plan.approval</field>
            <field name="arch" type="xml">
                <form edit="0" delete="0" >
                    <div class="col-md-12 col-lg-12">
                        <span>工單編號：</span>
                        <field name="work_order"/>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <span>工單描述：</span>
                        <field name="work_order_description"/>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <span>規定完成時間：</span>
                        <field name="plan_end_time"/>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <span>實際開始時間：</span>
                        <field name="actual_start_time"/>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <span>實際結束時間：</span>
                        <field name="actual_end_time"/>
                    </div>
                    <notebook>
                            <page string="對向波口測試">
                            </page>
                            <page string="檢測證書">
                            </page>
                            <page string="審批流程">
                                这是我对数据的描述
                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <!--工單審批詳情-->
        <record id="act_maintenance_plan_approval_management" model="ir.actions.client">
          <field name="name">工單審批詳情</field>
          <field name="tag">maintenance_plan_approval_management</field>
        </record>

        <record model="ir.actions.act_window" id="action_approval_management">
            <field name="name">工單審批</field>
            <field name="res_model">maintenance_plan.approval</field>
            <field name="view_mode">tree,form</field>
        </record>
  </data>
</odoo>